    </div>


    <h1 class="text-center mt-4">üéµ Recomendaciones Musicales</h1>

    @if (TempData["TrackId"] != null)
    {

         <div class="alert alert-success text-center mt-4">
            
            <script>
                document.addEventListener("DOMContentLoaded", function () {
