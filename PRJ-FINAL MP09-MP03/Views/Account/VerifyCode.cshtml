@{
    ViewData["Title"] = "Verificar código";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Verificar código</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilo personalizado -->
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div id="particles-js" class="particles"></div>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Introduce el código de verificación</h2>

        <form asp-action="VerifyCode" method="post" class="w-50 mx-auto">
            <div class="user-box">
                <input type="text" class="form-control" name="code" required placeholder=" " />
                <label for="code">Código</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">Verificar</button>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script src="~/js/particles-config.js"></script>
</body>
</html>
